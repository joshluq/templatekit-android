default_platform(:android)

platform :android do
  desc "Publish a snapshot version of the {{ cookiecutter.library_name }} library to GitHub Packages"
  lane :publish_snapshot do
    gradle(
      task: "publish",
      project_dir: ".",
      properties: {
        "versionType" => "-SNAPSHOT"
      }
    )
  end

lane :publish_release do
    desc "Publish a release version of the {{ cookiecutter.library_name }} library to GitHub Packages"
    gradle(
      task: "publish",
      project_dir: ".",
      properties: {
        "versionType" => ""
      }
    )
  end
end
